{
  "options": {
    "port": 9000,
    "hostname": "<%= host %>",
    "livereload": 35729
  },
  "livereload": {
    "options": {
      "open": "http://<%= host %>:9000/#/login",
      "base": [
        "<%= dirs.tmp %>",
        "<%= dirs.app %>",
        "<%= dirs.dist %>"
      ]
    }
  },
  "dist": {
    "options": {
      "open": "http://<%= host %>:9000/#/login",
      "base": [
        "<%= dirs.dist %>",
        "<%= dirs.tmp %>"
      ],
      "livereload": false
    }
  }
}