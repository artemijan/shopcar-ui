{
  "options": {
    "variables": {
      "environment": "<%= grunt.config.get('environment') %>",
      "version": "<%= grunt.option('appVersion') || \"0.0.0.0\" %>",
      "siteDomain": "<%= grunt.config.get('siteDomain') %>",
      "apiDomain": "<%= grunt.config.get('apiDomain') %>",
      "protocol": "<%= grunt.config.get('protocol') %>",
      "showVersion": "<%= grunt.config.get('showVersion') %>",
      "useXDomain": "<%= grunt.config.get('useXDomain') %>",
      "logLevel": "<%= grunt.config.get('logLevel') %>",
      "tinymcePluginsPath": "<%= grunt.config.get('tinymcePluginsPath') %>",
      "googleAnalyticsTrackingId": "<%= grunt.config.get('googleAnalyticsTrackingId') %>",
      "useFakeApi": "<%= grunt.config.get('useFakeApi') %>"
    },
    "force": true
  },
  "dist": {
    "files": [
      {
        "expand": true,
        "flatten": true,
        "src": ["<%= dirs.app %>/scripts/configuration.js"],
        "dest": "<%= dirs.dist %>/scripts/"
      }
    ]
  },
  "livereload": {
    "files": [
      {
        "expand": true,
        "flatten": true,
        "src": ["<%= dirs.app %>/scripts/configuration.js"],
        "dest": "<%= dirs.tmp %>/scripts/"
      }
    ]
  }
}
